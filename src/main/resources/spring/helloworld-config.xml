<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="helloWorldServiceFactory" class="guru.springframework.services.HelloWorldServiceFactory"/>
    <bean id="french" factory-bean="helloWorldServiceFactory" factory-method="createHelloWorldService">
        <constructor-arg value="fr"></constructor-arg>
    </bean>
    <bean id="helloWorldServiceRussian" factory-bean="helloWorldServiceFactory"
          factory-method="createHelloWorldService">
        <constructor-arg value="ru"></constructor-arg>
    </bean>
    <bean id="helloWorldServicePolishImpl" factory-bean="helloWorldServiceFactory"
          factory-method="createHelloWorldService">
        <constructor-arg value="pl"></constructor-arg>
    </bean>
    <beans profile="english">
        <import resource="classpath*:spring/english-helloworld-config.xml"/>
    </beans>
    <beans profile="spanish">
        <import resource="classpath*:spring/spanish-helloworld-config.xml"></import>
    </beans>
</beans>